{
  "cmake.ignoreCMakeListsMissing": true,
  "editor.formatOnSave": true,
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "files.associations": {
    "*.h": "c",
    "*.hpp": "cpp"
  },
  "clangd.arguments": [
    "--header-insertion=never",
    "--diagnostic-filter=-pragma*visibility*"
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".gitmodules": true,
    ".python-version": true,
    "build": true,
  }
}