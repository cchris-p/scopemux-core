{
  "cmake.ignoreCMakeListsMissing": true,
  "editor.formatOnSave": true,
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.formatOnSave": true
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "unifiedjs.vscode-remark",
    "editor.formatOnSave": false
  },
  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.h": "c",
    "*.hpp": "cpp",
    "string_view": "c",
    "array": "c",
    "chrono": "c",
    "compare": "c",
    "functional": "c",
    "istream": "c",
    "ostream": "c",
    "ratio": "c",
    "tuple": "c",
    "type_traits": "c",
    "utility": "c",
    "cstdint": "c"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".gitmodules": true,
    ".python-version": true,
    "build": true,
    "vendor": true,
    "core/build": true,
    "core/scopemux_core.egg-info": true,
    "core/vendor/pybind11": true,
    "core/vendor": true
  },
  "search.exclude": {
    "**/main.c": true,
    "**/.windsurfrules": true,
    "**/*.txt": true,
    "**/Makefile": true,
    "**/.git": true,
    "**/build": true,
    "*.dir": true,
    "*.rs": true,
    "*.d.ts": true,
    "**/vendor": true,
    "**/*.c.o.d,": true
  }
}