{
  "cmake.ignoreCMakeListsMissing": true,
  "editor.formatOnSave": true,
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[markdown]": {
    "editor.defaultFormatter": "unifiedjs.vscode-remark",
    "editor.formatOnSave": false
  },
  "files.associations": {
    "*.h": "c",
    "*.hpp": "cpp"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".gitmodules": true,
    ".python-version": true,
    "build": true,
    "vendor": true,
    "core/build": true,
    "core/scopemux_core.egg-info": true
  },
  "search.exclude": {
    "**/main.c": true,
    "**/*.h": true,
    "**/.windsurfrules": true,
    "**/*.txt": true,
    "**/*.md": true,
    "**/Makefile": true,
    "**/*.sh": true,
    "**/.git": true,
    "**/build": true,
    "*.dir": true,
    "*.rs": true,
    "*.d.ts": true,
    "**/vendor": true,
    "**/*.c.o.d,": true
  }
}